wget -q http://4tronix.co.uk/pi2go2/stepTest.py -O stepTest.py
wget -q http://4tronix.co.uk/pi2go2/lineTest.py -O lineTest.py
wget -q http://4tronix.co.uk/pi2go2/lineFollower.py -O lineFollower.py

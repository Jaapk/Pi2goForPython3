if [ ! -d ~/pi2go2 ]; then
  mkdir ~/pi2go2
fi
if [ ! -d ~/.config/autostart ]; then
  mkdir ~/.config/autostart
fi
cd ~/.config/autostart
echo Creating IP Display autostart
wget -q http://4tronix.co.uk/pi2go2/ipd.desktop -O ipd.desktop
cd ~/pi2go2
wget -q http://4tronix.co.uk/pi2go2/ipd03.py -O ipd03.py

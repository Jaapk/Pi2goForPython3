wget -q http://4tronix.co.uk/pi2go2/pi2go2.py -O pi2go2.py
echo Copying Test Files
wget -q http://4tronix.co.uk/pi2go2/adc.py -O adc.py
wget -q http://4tronix.co.uk/pi2go2/sonarTest.py -O sonarTest.py
wget -q http://4tronix.co.uk/pi2go2/avoider.py -O avoider.py
